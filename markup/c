@<&nbsp;&nbsp;>@{"debug", no_argument, NULL, 'd'}, _
@<&nbsp;&nbsp;>@{"threshold", required_argument, NULL, 't'}, _
@<&nbsp;&nbsp;>@{0, 0, 0, 0} _
}; _
 _
