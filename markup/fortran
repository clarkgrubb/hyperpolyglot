||[[# def-func]][#def-func-note define function]||integer function add(n, m) _
@<&nbsp;&nbsp;>@integer, intent(in) :: n _
@<&nbsp;&nbsp;>@integer, intent(in) :: m _
@<&nbsp;&nbsp;>@add = n + m _
end function add||##gray|⍝ define dyadic operator:## _
∇r ← a add b _
r ← a + b ∇ _
 _
