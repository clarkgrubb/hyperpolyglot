||[[# cmd-line-arg]][#cmd-line-arg-note command line arguments]||character(len=10) :: arg _
integer arg_len _
 _
i = 1 _
do while (i <= command_argument_count()) _
@<&nbsp;&nbsp;>@call get_command_argument(i, arg, arg_len) _
